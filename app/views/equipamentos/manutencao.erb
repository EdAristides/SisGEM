<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-12">
  <p id="notice"><%= notice %></p>
  <h1>Manutenções</h1>
</div>

<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-12 conteudoInf">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
      <%= link_to 'Nova Manutenção', new_manutencao_path, class:"btn btn-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <% if @equipamento_manutencaos.empty? %>
            <p> Nenhuma manutenção registrada </p>
          <% else %>
            <thead>
              <tr>
                <th>Numero de ordem</th>
                <th>Patrimônio</th>
                <th>Descrição</th>
                <th>Data de entrada</th>
                <th>Data de saída</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <% @equipamento_manutencaos.each do |manutencaos| %>
                <tr>
                  <td><%= link_to "#{manutencaos.numOrdem}", manutencaos %></td>
                  <td><%= link_to manutencaos.equipamento.patrimonio, equipamento_path("#{manutencaos.equipamento_id}") %></td>
                  <td><%= manutencaos.descricao %></td>
                  <td><%= manutencaos.dataEntrada.strftime("%d/%m/%Y") %></td>
                  <td><%= manutencaos.dataSaida.strftime("%d/%m/%Y") %></td>
                  <td><%= manutencaos.status %></td>
                  <td><%= link_to 'Detalhes', manutencaos, class: "btn-sm btn-info" %></td>
                  <td><%= link_to 'Editar', edit_manutencao_path(manutencaos), class: "btn-sm btn-default" %></td>
                  <td><%= link_to 'Deletar', manutencaos, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-sm btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>