<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-10 col-xs-offset-1 conteudoInf">
<%= form_with(model: estoque_peca, local: true) do |form| %>
  <% if estoque_peca.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(estoque_peca.errors.count, "error") %> prohibited this estoque_peca from being saved:</h2>

      <ul>
      <% estoque_peca.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 col-sm-6 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :equipamento_id, 'Patrimônio' %><br>
      <%= form.collection_select :equipamento_id, Equipamento.where(status: 'Doador de Peças'), :id, :patrimonio, {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :peca_id, 'Peca' %><br>
      <%= form.collection_select :peca_id, Peca.all, :id, :nome, {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :status, 'Status' %><br>
      <%= form.select :status, ['Disponível', 'Utilizada'], {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :quantidade, 'Quantidade' %><br>
      <%= form.select :quantidade, ['1', '2', '3', '4', '5', '6', '7', '8', '9'], {}, {class: 'form-control'} %>
    </div>
  </div>

<!--   <div class="col-md-4 col-sm-4 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :quantidade %>
      <%= form.text_field :quantidade, class: "form-control" %>
    </div>
  </div> -->

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= form.submit 'Salvar', class:"btn btn-default" %>
        <%= link_to 'Voltar', estoque_pecas_path, class:"btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
</div>