<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-10 col-xs-offset-1 conteudoInf">
  <div class="row">
    <%= form_with(model: @manutencao, local: true) do |form| %>
    <% if @manutencao.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(manutencao.errors.count, "error") %> prohibited this manutencao from being saved:</h2>

      <ul>
        <% manutencao.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-md-4 col-sm-4 col-xs-12 text-left">
      <div class="form-group">
        <%= form.label :equipamento_id, 'Patrimônio' %><br>
        <%= form.collection_select :equipamento_id, Equipamento.all, :id, :patrimonio, {}, {class: 'form-control'} %>
      </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 text-left">
      <div class="form-group">
        <%= form.label :numOrdem, 'Número de Ordem' %><br>
        <%= form.text_field :numOrdem, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 text-left">
      <div class="form-group">
        <%= form.label :descricao, 'Descrição' %><br>
        <%= form.text_field :descricao, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 text-left">
      <div class="form-group">
        <%= form.label :dataEntrada, 'Data de Entrada' %><br>
        <%= form.date_select :dataEntrada, class: "form-control" %>
      </div>
    </div>

    <!--   <div class="col-md-4 col-sm-4 col-xs-12 text-left">
    <div class="form-group">
      <%= form.label :dataSaida, 'Data de Saída' %>
      <%= form.date_select :dataSaida, class: "form-control" %>
    </div>
  </div> -->

    <div class="col-md-4 col-sm-4 col-xs-12 text-left">
      <div class="form-group">
        <%= form.label :status, 'Status' %><br>
        <%= form.select :status, ['Aguardando técnico', 'Em manutenção', 'Concluído'], {}, {class: 'form-control'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <%= form.submit 'Salvar', class:"btn btn-primary" %>
          <%= link_to 'Voltar', manutencaos_path, class:"btn btn-default" %>
        </div>
      </div>
    </div>
    <% end %>