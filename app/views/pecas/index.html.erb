<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <h1>Pecas</h1>
</div>

<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-10 col-xs-offset-1 conteudoInf">
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12">
      <div class="form-group">
              <%= form_tag pecas_path, :action => 'index', :method => 'get' do %>
              <p>
                <%= 'Digite o nome da peça para buscar' %>
                <br>
                <%= text_field_tag :search, params[:search], :class => "form-control", :style => "width: initial;"%>
                <%= submit_tag "Buscar", :nome => nil, class:"btn btn-primary" %>
              </p>
            <% end %>
  </div>
  </div>
<div class="col-md-6 col-sm-4 col-xs-12 text-right">
      <% if can? :create, Peca %>
      <div class="form-group">
      <br>
        <%= link_to 'Nova Peca', new_peca_path, class:"btn btn-default" %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <caption>Peças</caption>
            <tr>
              <th>Nome</th>
              <th>Caracteristica</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>


            <% @pecas.each do |peca| %>
              <tr>
                <td><%= link_to "#{peca.nome}", peca %></td>
                <td><%= peca.caracteristica %></td>
                <td><%= link_to 'Detalhes', peca, class: "btn-sm btn-info" %></td>
                <td><%= link_to 'Editar', edit_peca_path(peca), class: "btn-sm btn-default" %></td>
                <td><%= link_to 'Deletar', peca, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @pecas, window: 2 %>
      </div>
    </div>
  </div>
</div>
