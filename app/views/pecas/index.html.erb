<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-12">
  <p id="notice"><%= notice %></p>
  <h1>Pecas</h1>
</div>

<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-12 conteudoInf">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
      <%= link_to 'Nova Peca', new_peca_path, class:"btn btn-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Caracteristica</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <%= form_tag pecas_path, :action => 'index', :method => 'get' do %>
              <p>
                <%= 'Digite o nome da peÃ§a para buscar' %>
                <br>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Buscar", :nome => nil %>
              </p>
            <% end %>

            <% @pecas.each do |peca| %>
              <tr>
                <td><%= link_to "#{peca.nome}", peca %></td>
                <td><%= peca.caracteristica %></td>
                <td><%= link_to 'Detalhes', peca %></td>
                <td><%= link_to 'Editar', edit_peca_path(peca), class: "btn-sm btn-default" %></td>
                <td><%= link_to 'Deletar', peca, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
