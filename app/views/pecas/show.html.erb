<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-10 col-xs-offset-1 conteudoSup">
	<p>
	  <strong>Nome:</strong>
	  <%= @peca.nome %>
	</p>

	<p>
	  <strong>Caracteristica:</strong>
	  <%= @peca.caracteristica %>
	</p>

	<div class="row">
	  <div class="col-md-12 col-sm-12 col-xs-12">
		<%= link_to 'Editar', edit_peca_path(@peca), class:"btn btn-primary"%>
		<%= link_to 'Voltar', pecas_path, class:"btn btn-default"%>
	  </div>
	</div>

	<h2>Coment√°rios</h2>
	<% @comments.each do |comment| %>
	  <div class="well">
	    <%= comment.user.name %> - <%= comment.created_at %> - 
	    <% if current_user.id == comment.user.id %>
	      <%= link_to 'Apagar', comment, method: :delete, data: { confirm: 'Tem certeza?' } %>
	    <% end %>
	    <p>
	    <%= comment.body %>
	  </div>
	<% end %>
	<%= paginate @comments, window: 2 %>

	<%= render partial: "comments/form", locals: {commentable: @peca} %>
	<!-- <%= render partial: "comments/comments", locals: {commentable: @peca} %>-->
</div>