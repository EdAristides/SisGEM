<div class="col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-12 conteudoInf">
  <p id="notice"><%= notice %></p>

  <p>
	<strong>Função:</strong>
	  <%= @user.funcao %>
  </p>

  <p>
	<strong>Name:</strong>
	<%= @user.name %>
  </p>

  <p>
  <strong>Email:</strong>
  <%= @user.email %>
